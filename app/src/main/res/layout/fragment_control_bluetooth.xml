<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".ControlBluetoothFragment">

    <Button
        android:id="@+id/b_paired_device"
        android:layout_width="@dimen/big_button_weidth"
        android:layout_height="@dimen/big_button_height"
        android:text="@string/connect"
        android:textSize="@dimen/text_20_title"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/big_margin"
        android:layout_marginBottom="@dimen/middle_margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/big_margin">

        <EditText
            android:id="@+id/et_input_bluetooth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:hint="@string/message"
            android:layout_weight="4"
            android:inputType="text"
            android:layout_marginStart="@dimen/middle_margin"
            android:layout_marginEnd="@dimen/middle_margin"/>

        <Button
            android:id="@+id/b_send"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/send"
            android:textSize="@dimen/text_16"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/middle_margin"
            android:layout_weight="2"
            android:backgroundTint="@color/design_default_color_primary_dark"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_output_bluetooth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/big_margin"
            android:layout_marginStart="@dimen/middle_margin"
            android:layout_marginEnd="@dimen/middle_margin"
            android:textSize="@dimen/text_16"
            android:fontFamily="sans-serif"
            tools:text="@tools:sample/lorem/random"/>

    </ScrollView>


</LinearLayout>